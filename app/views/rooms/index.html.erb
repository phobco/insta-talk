<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-6 text-center">
    <h1><%= t('index.rooms') %></h1>

    <ul class="mt-4 list-unstyled">
      <%= render @rooms %>
    </ul>

    <div class="mt-2">
      <%= render 'rooms/form', room: @room %>
    </div>
  </div>

  <div class="col-6 text-center">
    <h1><%= t('index.online_now') %></h1>

    <ul class="users-list mt-4 list-unstyled text-success" id="users">
      <%= render partial: 'users/user', collection: users_online, as: 'user' %>
    </ul>
  </div>
</div>
